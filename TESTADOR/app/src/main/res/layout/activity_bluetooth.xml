<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6CB0E3"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context="com.app.Testador.BluetoothActivity">

    <ImageView
        android:id="@+id/imgStatus"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center"
        app:srcCompat="@drawable/b_off" />

    <TextView
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Status do BlueTooth: "
        android:textSize="15sp" />

    <Button
        android:id="@+id/btnOn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#EAE7E7"
        android:text="Ligar"
        android:textColor="#122C8C" />

    <Button
        android:id="@+id/btnOff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#EAE7E7"
        android:text="Desligar"
        android:textColor="#122C8C" />

    <Button
        android:id="@+id/btnOcultar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#EAE7E7"
        android:text="Tornar o dispositivo visível"
        android:textColor="#122C8C" />

    <Button
        android:id="@+id/btnPareamento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#EAE7E7"
        android:text="Dispositivos emparelhados"
        android:textColor="#122C8C" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Dispositivos:"
        android:textSize="20sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtDevices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ainda não há dispositivos."
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>